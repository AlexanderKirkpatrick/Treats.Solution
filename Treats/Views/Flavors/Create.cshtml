@{
  Layout = "_Layout";
}

@using Treats.Models
@model Treats.Models.Flavor;

<h4>Add a new flavor to the inventory!</h4>
<hr>
<br>
<br>
@using (Html.BeginForm())
{
  @Html.Label("Name")
  @Html.TextBoxFor(model => model.FlavorName, new { @class="form-control"})
<br>
<br> 
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description, new { @class="form-control"})
<br>
<br>
  <input type="submit" value="Add New Flavor"/>
}
<br>
<br>
<br>
<p>@Html.ActionLink("Flavors", "Index")</p>
<p>@Html.ActionLink("Treats", "Index", "Treats")</p>
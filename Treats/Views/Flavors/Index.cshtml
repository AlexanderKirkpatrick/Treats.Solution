@{
  Layout = "_Layout";
}

@using Treats.Models
@model List<Treats.Models.Flavor>

<h2>Flavors</h2>
<hr/>

@if(Model.Count == 0)
{
  <h2>No flavors have been added yet!</h2>
}
else 
{
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new {id = flavor.FlavorId})</li>
  }
}
<br>
@if (User.Identity.IsAuthenticated)
{
<button>@Html.ActionLink("Add A Flavor", "Create", "Flavors")</button>
}
<br>
<br>
<br>
<p>@Html.ActionLink("View Treats", "Index", "Treats")</p>
<p>@Html.ActionLink("View All", "Details", "Home")</p>
@{
  Layout = "_Layout";
}

@using Treats.Models
@model List<Treats.Models.Treat>

<h2>Treats</h2>
<hr/>

@if(Model.Count == 0)
{
  <h2>There are currently no treats in the inventory!</h2>
  
}
else 
{
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new {id = treat.TreatId})</li>
  }
}
<br>
<br>
@if (User.Identity.IsAuthenticated)
{
<button>@Html.ActionLink("Add A Treat", "Create", "Treats")</button>
}
<br>
<br>
<br>
<p>@Html.ActionLink("View All Flavors", "Index", "Flavors")</p>
<p>@Html.ActionLink("View All", "Details", "Home")</p>
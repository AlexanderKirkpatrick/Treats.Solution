@{
  Layout = "_Layout";
}

@using Treats.Models;
@model Treats.Models.Treat;

<h4>Edit this Treat: @Html.DisplayFor(model => model.TreatName)</h4>
<hr>
<br>
<br>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Name")
  @Html.EditorFor(model => model.TreatName, new { @class="form-control"} )
<br>
<br>
  @Html.LabelFor(model => model.Description)
  @Html.EditorFor(model => model.Description, new { @class="form-control"})
<br>
<br>
  <button type="submit" class="btn btn-default">Save Changes</button>
}